<odoo>

    <record id="iti_netflix_movies_graph_view" model="ir.ui.view">
        <field name="name">view name here</field>
        <field name="model">iti_netflix.movies</field>

        <field name="arch" type="xml">

            <graph string="Movies Graph" type="pie">
                <field name="subscription_price" type="measure"/>
                <field name="production_year" type="row"/>
                <field name="name"/>
            </graph>

        </field>

    </record>

</odoo>